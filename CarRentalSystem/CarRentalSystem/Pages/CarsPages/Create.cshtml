@page
@model CarRentalSystem.Pages.CarsPages.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category </h2>
                <hr/>
        </div>
        <div class="mb-3">
            <label>CarId</label>
            <input asp-for="cars.CarId" type="text" class="form-control" />
            <span asp-validation-for="cars.CarId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Brand</label>
            <input asp-for="cars.Brand" type="text" class="form-control" />
            <span asp-validation-for="cars.Brand" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label>Model</label>
            <input asp-for="cars.Model" type="text" class="form-control" />
            <span asp-validation-for="cars.Model" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label>Price</label>
            <input asp-for="cars.Price" type="text" class="form-control" />
            <span asp-validation-for="cars.Price" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label>IsAvailable</label>
            <input asp-for="cars.IsAvailable" type="text" class="form-control" />
            <span asp-validation-for="cars.IsAvailable" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="/CarsPages/Index"  class="btn btn-secondary" style="width:150px">Back to List</a>

    </div>
</form>

