@page
@model CarRentalSystem.Pages.CarsPages.IndexModel
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/CarsPages/Create" class="btn btn-primary">

                Create new category
            </a>

        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    CarId
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Model
                </th>
                <th>
                    Price
                </th>
                <th>
                    IsAvailable
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.cars)
            {
                <tr>
                    <td>
                        @obj.CarId
                    </td>
                    <td>
                        @obj.Brand
                    </td>
                    <td>
                        @obj.Model
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.IsAvailable
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/CarsPages/Edit" asp-route-CarId="@obj.CarId" class="btn btn-primary mx-2">
                                Edit
                            </a>

                            <a asp-page="/CarsPages/Delete" asp-route-CarId="@obj.CarId" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

